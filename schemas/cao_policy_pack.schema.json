{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CAO Policy Pack",
  "description": "Schema for validating QAL Policy Pack artifacts in the CAO (Computer-Aided Organization) pillar",
  "type": "object",
  "required": [
    "utcs_mi_id",
    "package_name", 
    "program",
    "version",
    "issued_by",
    "owner",
    "effective_on",
    "det_ref",
    "policies"
  ],
  "properties": {
    "utcs_mi_id": {
      "$ref": "utcs_mi.schema.json",
      "description": "UTCS-MI v5.0 compliant universal identifier"
    },
    "package_name": {
      "type": "string",
      "description": "Human-readable name of the policy pack"
    },
    "program": {
      "type": "string",
      "description": "Target program identifier (e.g., BlendedWingBodyProgramQ100)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Policy pack version in semver format"
    },
    "issued_by": {
      "type": "string",
      "description": "Issuing authority (e.g., CAO-Compliance)"
    },
    "owner": {
      "type": "string",
      "description": "Policy pack owner"
    },
    "effective_on": {
      "type": "string",
      "format": "date",
      "description": "Effective date in ISO 8601 format"
    },
    "det_ref": {
      "type": "string",
      "pattern": "^DET:[A-Z]{3}:[A-Za-z]+:[A-Za-z0-9\\-]+:V\\d+\\.\\d+$",
      "description": "Reference to corresponding DET (Digital Evidence Twin)"
    },
    "policies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "policy_id",
          "name",
          "scope",
          "applies_to",
          "content"
        ],
        "properties": {
          "policy_id": {
            "type": "string",
            "pattern": "^POL-[A-Z0-9\\-]+-\\d+$",
            "description": "Unique policy identifier"
          },
          "name": {
            "type": "string",
            "description": "Policy name"
          },
          "scope": {
            "type": "string",
            "description": "Policy scope description"
          },
          "applies_to": {
            "type": "object",
            "required": ["domains", "pillars"],
            "properties": {
              "domains": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^[A-Z]{3}$"
                },
                "description": "Applicable domain codes (3-letter)"
              },
              "pillars": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["CAB", "CAD", "CAE", "CAT", "CAV", "CAM", "CAP", "CAS", "CAO", "CAI"]
                },
                "description": "Applicable CAX pillars"
              }
            }
          },
          "content": {
            "type": "object",
            "description": "Policy-specific content (flexible structure)"
          }
        }
      }
    }
  },
  "additionalProperties": false
}