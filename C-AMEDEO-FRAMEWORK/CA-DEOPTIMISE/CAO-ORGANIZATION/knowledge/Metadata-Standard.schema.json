{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CAO Metadata Standard",
  "description": "Standardized metadata schema for CAO knowledge management artifacts",
  "version": "1.0.0",
  "type": "object",
  
  "properties": {
    "document_metadata": {
      "type": "object",
      "required": ["id", "title", "version", "type", "created", "last_modified"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z]{2,4}-[A-Z0-9]+-[0-9]+$",
          "description": "Unique document identifier following CAO naming convention"
        },
        "title": {
          "type": "string",
          "description": "Document title"
        },
        "version": {
          "type": "string", 
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version number"
        },
        "type": {
          "type": "string",
          "enum": ["Policy", "Procedure", "Standard", "Guideline", "Template", "Report", "Analysis"],
          "description": "Document type classification"
        },
        "created": {
          "type": "string",
          "format": "date",
          "description": "Creation date"
        },
        "last_modified": {
          "type": "string", 
          "format": "date",
          "description": "Last modification date"
        }
      }
    },
    
    "content_metadata": {
      "type": "object",
      "properties": {
        "abstract": {
          "type": "string",
          "maxLength": 500,
          "description": "Document abstract or summary"
        },
        "keywords": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Searchable keywords"
        },
        "domain": {
          "type": "string",
          "description": "Applicable domain (AAA, CQH, etc.)"
        },
        "phase": {
          "type": "string",
          "enum": ["CAO", "CAB", "CAD", "CAE", "CAT", "CAV", "CAM", "CAP", "CAS"],
          "description": "QAL lifecycle phase"
        },
        "classification": {
          "type": "string",
          "enum": ["Public", "Internal", "Restricted", "Confidential"],
          "description": "Security classification"
        }
      }
    },
    
    "traceability": {
      "type": "object",
      "properties": {
        "requirements": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Traced requirements"
        },
        "references": {
          "type": "array",
          "items": {"type": "string"}, 
          "description": "Referenced documents"
        },
        "det_links": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Digital Evidence Twin links"
        }
      }
    },
    
    "quantum_enhancements": {
      "type": "object",
      "properties": {
        "quantum_content": {
          "type": "boolean",
          "description": "Contains quantum computing related content"
        },
        "algorithms_used": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Quantum algorithms referenced or used"
        }
      }
    }
  }
}